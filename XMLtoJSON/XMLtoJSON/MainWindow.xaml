<Window x:Class="XMLtoJSON.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="XMLtoJSON" Height="210" Width="490" ResizeMode="NoResize">
    <Grid>
        <Label Content="Wczytaj plik XML z lokalizacji..." VerticalAlignment="Top" HorizontalAlignment="Left" Margin="15,0,0,0" />
        <TextBox Name="tbLoad" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="20,25,0,0" IsEnabled="False" Width="400" />
        <Label Content="Zapisz plik JSON do lokalizacji..." VerticalAlignment="Top" HorizontalAlignment="Left" Margin="15,50,0,0" />
        <TextBox Name="tbSave" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="20,75,0,0" IsEnabled="False" Width="400"/>
        <Button Name="bLoad" Content="..." VerticalAlignment="Top" HorizontalAlignment="Left" Margin="430,25,0,0" Width="20" Height="18" Click="bLoad_Click" />
        <Button Name="bSave" Content="..." VerticalAlignment="Top" HorizontalAlignment="Left" Margin="430,75,0,0" Width="20" Height="18" Click="bSave_Click" />

        <Button Name="bConvert" Content="Konwertuj i zapisz" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="345,120,0,0" Height="30" Width="110" Click="bConvert_Click" />

        <Button Name="bAuthor" Content="O autorze..." VerticalAlignment="Top" HorizontalAlignment="Left" Margin="20,125,0,0" Click="bAuthor_Click" />
    </Grid>
</Window>
