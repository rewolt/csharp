<Window x:Class="Samotne_literki_w_LaTeX.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="240" Width="520">
    <StackPanel>
        <StackPanel.Resources>
            <Style TargetType="{x:Type Button}">
                <Setter Property="Margin" Value="0,10,0,10"/>
            </Style>
        </StackPanel.Resources>
        <Label Content="Wczytaj plik z:"/>
        <WrapPanel>
            <TextBox Height="23" Width="480" TextWrapping="Wrap" Text=""/>
            <Button x:Name="bt_wczytaj" Content="..."/>
        </WrapPanel>
        <Label Content="Zapisz plik jako:"/>
        <WrapPanel>
            <TextBox Height="23" Width="480" TextWrapping="Wrap" Text=""/>
            <Button x:Name="bt_zapisz" Content="..."/>
        </WrapPanel>
        <Button x:Name="bt_konwertuj" Height="35" Width="200" Content="Konwertuj i zapisz" Click="bt_konwertuj_Click"/>

    </StackPanel>
</Window>
