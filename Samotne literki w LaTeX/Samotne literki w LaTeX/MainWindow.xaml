<Window x:Class="Samotne_literki_w_LaTeX.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="304" Width="520">
    <StackPanel>
        <StackPanel.Resources>
            <Style TargetType="{x:Type Button}">
                <Setter Property="Margin" Value="0,10,0,10"/>
            </Style>
        </StackPanel.Resources>
        <Label Content="Wczytaj plik z:"/>
        <WrapPanel>
            <TextBox x:Name="tb_wczytaj" Height="23" Width="480" TextWrapping="Wrap" IsEnabled="False" Text=""/>
            <Button x:Name="bt_wczytaj" Content="..." Width="20" Click="bt_wczytaj_Click"/>
        </WrapPanel>
        <Label Content="Zapisz plik jako:"/>
        <WrapPanel>
            <TextBox x:Name="tb_zapisz" Height="23" Width="480" TextWrapping="Wrap" IsEnabled="False" Text=""/>
            <Button x:Name="bt_zapisz" Content="..." Width="20" Click="bt_zapisz_Click"/>
        </WrapPanel>
        <Label Content="Zapisz backup jako:"/>
        <WrapPanel>
            <TextBox x:Name="tb_zapisz_backup" Height="23" Width="480" TextWrapping="Wrap" IsEnabled="False" Text=""/>
            <Button x:Name="bt_zapisz_backup" Content="..." Width="20" Click="bt_zapisz_backup_Click"/>
        </WrapPanel>
        <Button x:Name="bt_konwertuj" Height="35" Width="200" Content="Konwertuj i zapisz" Click="bt_konwertuj_Click"/>

    </StackPanel>
</Window>
